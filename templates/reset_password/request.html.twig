{% extends 'base.html.twig' %}

{% block title %}Reset mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mot de passe</h1>

{{ form_start(requestForm, {'attr':{'class':'form-material'}}) }}
        <div class="form-field">
                {{form_label(requestForm.email)}}
                
                {{ form_widget(requestForm.email, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="mb-5">
            <small>
                Saisissez votre adresse électronique et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
